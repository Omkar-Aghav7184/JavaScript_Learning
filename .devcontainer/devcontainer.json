// .devcontainer/devcontainer.json
{
  "name": "Node.js DevContainer",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:0-18",

  // Optional: Forward common dev ports (3000 = React, 5173 = Vite, 8080 = APIs)
  "forwardPorts": [3000, 5173, 8080],

  // Automatically run a command after container is ready (like installing packages)
  "postCreateCommand": "npm install",

  // VS Code customization (extensions and settings)
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "vscode-icons-team.vscode-icons",
        "wayou.vscode-todo-highlight"
      ],
      "settings": {
        "editor.fontSize": 16,
        "terminal.integrated.fontSize": 18,
        "editor.wordWrap": "on",
        "editor.formatOnSave": true
      }
    }
  },

  // Optional: Set remote user
  // "remoteUser": "node"
}
